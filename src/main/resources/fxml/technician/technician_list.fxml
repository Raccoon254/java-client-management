<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../../css/main.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.management.controller.technician.TechnicianListController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="section-title" text="Technician Management">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <TextField fx:id="searchField" prefHeight="35.0" prefWidth="300.0" promptText="Search by name, email, credentials...">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <Label text="Credential:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="filterCredentialBox" prefHeight="35.0" prefWidth="150.0" />
                        <Label text="Coverage:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="filterCoverageBox" prefHeight="35.0" prefWidth="100.0" />
                        <Button fx:id="refreshButton" mnemonicParsing="false" styleClass="secondary-button" text="Refresh" />
                    </children>
                </HBox>
                <Separator prefWidth="200.0" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <TableView fx:id="technicianTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="100.0" text="First Name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="100.0" text="Last Name" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="credentialsColumn" prefWidth="120.0" text="Credentials" />
                <TableColumn fx:id="credentialLevelColumn" prefWidth="120.0" text="Level" />
                <TableColumn fx:id="coverageAreaColumn" prefWidth="150.0" text="Coverage Area" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="statusLabel" text="0 technicians">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="exportButton" mnemonicParsing="false" text="Export to CSV" />
                        <Button fx:id="scheduleButton" mnemonicParsing="false" text="View Schedule" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" styleClass="cancel-button" text="Delete" />
                        <Button fx:id="editButton" mnemonicParsing="false" text="Edit" />
                        <Button fx:id="addButton" defaultButton="true" mnemonicParsing="false" text="Add New Technician" />
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>