<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane fx:id="mainContainer" prefHeight="400.0" prefWidth="600.0" styleClass="create-menu-dialog" stylesheets="@../../css/dialog.css,@../../css/main.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.management.controller.dialogs.CreateMenuDialogController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label styleClass="section-title" text="Create New">
                <font>
                    <Font name="System Bold" size="22.0"/>
                </font>
            </Label>
            <Label text="Select an item to create:" textFill="#666666">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    <center>
        <GridPane hgap="15.0" vgap="15.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <!-- Customer Button -->
            <Button fx:id="customerButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#handleNewCustomer"
                    styleClass="create-menu-button, customer-button">
                <graphic>
                    <VBox alignment="CENTER" spacing="15.0">
                        <SVGPath content="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                 fill="WHITE" scaleX="1.5" scaleY="1.5"/>
                        <Label text="Customer" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                    </VBox>
                </graphic>
            </Button>

            <!-- Technician Button -->
            <Button fx:id="technicianButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#handleNewTechnician"
                    styleClass="create-menu-button, technician-button" GridPane.columnIndex="1">
                <graphic>
                    <VBox alignment="CENTER" spacing="15.0">
                        <children>
                            <SVGPath
                                    content="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z M14.7 6.3a1 1 0 000 1.4l1.6 1.6a1 1 0 001.4 0l3.77-3.77a2 2 0 01-2.83-2.83z"
                                    fill="WHITE" scaleX="1.2" scaleY="1.2"/>
                            <Label text="Technician" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="16.0"/>
                                </font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- Service Request Button -->
            <Button fx:id="serviceRequestButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#handleNewServiceRequest"
                    styleClass="create-menu-button, service-request-button" GridPane.columnIndex="2">
                <graphic>
                    <VBox alignment="CENTER" spacing="15.0">
                        <children>
                            <SVGPath
                                    content="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                                    fill="WHITE" scaleX="1.3" scaleY="1.3"/>
                            <Label text="Service Request" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="16.0"/>
                                </font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- Quote Button -->
            <Button fx:id="quoteButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#handleNewQuote" styleClass="create-menu-button, quote-button"
                    GridPane.rowIndex="1">
                <graphic>
                    <VBox alignment="CENTER" spacing="15.0">
                        <children>
                            <SVGPath
                                    content="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"
                                    fill="WHITE" scaleX="1.2" scaleY="1.2"/>
                            <Label text="Quote" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="16.0"/>
                                </font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- Payment Button -->
            <Button fx:id="paymentButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#handleNewPayment" styleClass="create-menu-button, payment-button"
                    GridPane.columnIndex="1" GridPane.rowIndex="1">
                <graphic>
                    <VBox alignment="CENTER" spacing="15.0">
                        <SVGPath
                                content="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"
                                fill="WHITE" scaleX="1.2" scaleY="1.2"/>
                        <Label text="Payment" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                    </VBox>
                </graphic>
            </Button>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <Button fx:id="closeButton" cancelButton="true" mnemonicParsing="false" onAction="#handleClose"
                    styleClass="secondary-button" text="Close"/>
        </HBox>
    </bottom>
</BorderPane>